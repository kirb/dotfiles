{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"preact"
	],
	"indent": [ 2, "tab" ],
  "quotes": [ 2, "double" ],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"$": "readonly"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"@typescript-eslint"
	],
	"rules": {
		"comma-dangle": ["error", "never"],
		"eqeqeq": [
			"error", "always", {
				"null": "ignore"
			}
		],
		"newline-per-chained-call": "error",
		"prefer-const": "off",
		"no-unused-vars": "off",
		"no-spaced-func": "off",
		"@typescript-eslint/explicit-function-return-type": "off",
		"@typescript-eslint/no-empty-function": "off",
		"@typescript-eslint/no-non-null-assertion": "off",
		"react/no-unknown-property": [
			"error", {
				"ignore": ["class", "for"]
			}
		]
	}
}
