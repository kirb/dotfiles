# mostly stolen from paul irish’s dotfiles

[core]
	excludesfile = ~/.dotfiles/global.gitignore
	attributesfile = ~/.dotfiles/global.gitattributes

	# insanely beautiful diffs
	pager = diff-so-fancy | less -R -x2
	editor = nano

# use separate file for username / github token / etc
[include]
	path = ~/.dotfiles/.gitconfig.private

# rewrites of repo paths
[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "git://github.com"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"

# correct typos
[help]
	autocorrect = 1

# GPG sign commits
[commit]
	gpgsign = true

# use the macos keychain credential helper
[credential]
	helper = osxkeychain

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
	default = matching
	followTags = true

# rebase! http://stackoverflow.com/q/804115
[pull]
	rebase = true

# allow pushing to non-bare repos on this machine
[receive]
	denyCurrentBranch = updateInstead

[tag]
	forceSignAnnotated = true

# git mergetool
[merge]
	tool = code
	# conflictstyle = diff3

# use vscode as diff tool
[diff]
	tool = code

[difftool "code"]
	cmd = code -wd $LOCAL $REMOTE

[merge]
	tool = code

[mergetool "code"]
	cmd = code -wm $REMOTE $LOCAL $BASE $MERGED

# use the newer git protocol where available
[protocol]
	version = 2

# clone up to 4 submodules at once
[submodule]
	fetchJobs = 4

[stash]
	showPatch = 1

# so much color
[color]
	ui = auto

[color "diff"]
	meta = yellow bold
	commit = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

# aliases (wow who would have thought)
[alias]
	tags = tag -l
	branches = branch -a
	remotes = remote -v
	diff = diff --patch-with-stat --compact-summary

	# this is pretty useful
	a = add
	c = commit
	ca = commit --amend
	cf = commit --amend --no-edit
	cd = !git commit --amend --date=\"$(date)\"
	co = checkout
	diff = diff --patch-with-stat --compact-summary
	d = diff --patch-with-stat --compact-summary
	dc = diff --cached --patch-with-stat --compact-summary
	l = log
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	s = status
	ss = stash show --patch-with-stat --compact-summary
	show = show --patch-with-stat --compact-summary
	nb = checkout -b
	rb = rebase
	rd = commit --amend
	rda = commit --amend --no-edit
	rs = reset
	rv = revert
	cp = cherry-pick
	comp = cherry --abbrev=8 -v
	# https://docs.gitlab.com/ee/user/project/merge_requests/reviews/#checkout-merge-requests-locally-through-the-head-ref
	mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -

	# hub commands
	pull-request = !hub pull-request
	fork = !hub fork
	create = !hub create
	browse = !~/.dotfiles/bin/git-browse
	compare = !hub compare
	release = !hub release
	issue = !hub issue
	ci-status = !hub ci-status

	# literally my life
	g = !git
	git = !git
	ad = add
	og = log
	lgo = log
	cmomit = commit
	comimt = commit
	comit = commit
	ocmmit = commit
	ocmit = commit
	ommit = commit
	commt = commit
	comit = commit
	commi = commit
	cmit = commit
	omit = commit
	cmt = commit
	cinnut = commit
	comkmit = commit
	cmmit = commit
	statsu = status
	statu = status
	sttus = status
	stats = status
	satus = status
	stts = status
	stat = status
	st = status
	sta = stash
	rst = reset
	dff = diff
	dif = diff
	
# filtery stuff. i don’t have a clue what any of this does
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
